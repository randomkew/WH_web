<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Notice">
	<resultMap type="noticeMap" id="NoticeVO">
		<id property="idx" 				column="idx"/>
		<result property="title" 		column="title"/>
		<result property="content" 		column="content"/>
		<result property="writerId" 	column="writer_id"/>
		<result property="writerName" 	column="writer_name"/>
		<result property="registDate" 	column="regist_date"/>
		<result property="modifyDate" 	column="modify_date"/>
		<!--  <result	property="attIdx"		column="att_idx" />
		<result	property="attFilename"	column="att_filename" />-->
	</resultMap>
	
	<select id="selectNoticeList" parameterType="hashmap" resultMap="NoticeVO">
		<![CDATA[
			SELECT 
				B.*, U.name AS writer_name
			FROM 
				tb_notice B INNER JOIN tb_user U ON B.writer_id = U.user_id
		]]>
			<where>
				<if test="title != ''">
					B.title LIKE CONCAT('%', #{title}, '%')
				</if>
			</where>
		<![CDATA[
			ORDER BY B.idx DESC
			LIMIT #{startList}, #{listSize}
		]]>
	</select>
	<select id="selectNoticeListCnt" parameterType="String" resultType="int">
		<![CDATA[
			SELECT
				COUNT(*)
			FROM
				tb_notice
		]]>
		<where>
			<if test="value != ''">
				title LIKE CONCAT('%', #{title}, '%')
			</if>
		</where>
	</select>
	<select id="selectNotice" parameterType="long" resultMap="NoticeVO">
		<![CDATA[
			SELECT 
				B.*, U.name AS writer_name
			FROM 
				tb_notice B INNER JOIN tb_user U ON B.writer_id = U.user_id
			WHERE 
				B.idx = #{idx}
		]]>
	</select>
	<insert id="insertNotice" parameterType="noticeMap">
		<![CDATA[
			INSERT INTO tb_notice
				(title, content, writer_id)
			VALUE
				(#{title}, #{content}, #{writerId});
		]]>
	</insert>
	<delete id="deleteNotice" parameterType="long">
		<![CDATA[
			DELETE FROM tb_notice
			WHERE
				idx = #{idx}
		]]>
	</delete>


</mapper>